{
  "settings": [
    {
      "type": "group",
      "label": {
        "en": "General",
        "nl": "Algemeen"
      },
      "children": [
        {
          "id": "reset_values",
          "type": "checkbox",
          "label": {
            "en": "Reset values on session start",
            "nl": "Reset waarden bij sessie start"
          },
          "hint": {
            "en": "When enabled, the values will be reset to 0 when the device is started. This will allow you to see bars in the insights."
          },
          "value": false
        },
        {
          "id": "update_values",
          "type": "checkbox",
          "label": {
            "en": "Update values on session update",
            "nl": "Waarden bijwerken bij sessie update"
          },
          "hint": {
            "en": "When enabled, the values will be updated in the device when the price changes. You can use these values in flows."
          },
          "value": true
        }
      ]
    },
    {
      "type": "group",
      "label": {
        "en": "Usage",
        "nl": "Verbruik"
      },
      "children": [
        {
          "id": "usage_decimals",
          "type": "number",
          "label": {
            "en": "Decimals",
            "nl": "Decimalen"
          },
          "hint": {
            "en": "Choose the maximum number of decimals you want to see in the usage values. This will not show 0 at the end, f.e. 16.7798 = 16.78"
          },
          "value": 2,
          "min": 0,
          "max": 6,
          "units": {
            "en": "decimals",
            "nl": "decimalen"
          }
        }
      ]
    },
    {
      "type": "group",
      "label": {
        "en": "Duration",
        "nl": "Looptijd"
      },
      "children": [
        {
          "id": "show_duration_seconds",
          "type": "checkbox",
          "label": {
            "en": "Show seconds",
            "nl": "Toon seconden"
          },
          "hint": {
            "en": "Choose if you want to display duration seconds, when days/hours/minutes are applicable. If duration is less then 1 minute, it will always show seconds."
          },
          "value": true
        }
      ]
    },
